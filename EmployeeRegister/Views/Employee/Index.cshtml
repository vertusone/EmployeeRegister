@model IEnumerable<EmployeeRegister.ViewModels.EmployeeDepartment>
@{
    ViewData["Title"] = "Управление сотрудниками";
}

<h1>Управление сотрудниками</h1>

<a asp-action="AddEmployee" class="btn btn-primary" style="margin-top: 15px; margin-bottom: 15px;">Добавить</a>

<div>
    <table class="table table-dark">
        <thead class="tab">
            <tr>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Дата приёма на работу</th>
                <th>Должность</th>
                <th>Компания</th>
                <th>Операция</th>
            </tr>
        </thead>
        <tbody>
            @foreach (EmployeeRegister.ViewModels.EmployeeDepartment ed in Model)
            {
            <tr>
                <td>@ed.EmployeeID</td>
                <td>@ed.EmplSurname</td>
                <td>@ed.EmplName</td>
                <td>@ed.EmplMiddleName</td>
                <td>@ed.EmploymentDate.ToShortDateString()</td>
                <td>@ed.Position</td>
                @if (ed.DeptName == "")
                {
                    <td class="text-danger">Нераспределено</td>
                }
                else
                {
                    <td>@ed.DeptName</td>
                }
                <td><a asp-action="DetailEmployee" asp-route-id="@ed.EmployeeID" class="btn btn-secondary btn-sm">Сведения</a>  <a asp-action="EditEmployee" asp-route-id="@ed.EmployeeID" class="btn btn-secondary btn-sm">Редактировать</a>  <a asp-action="DeleteEmployee" asp-route-id="@ed.EmployeeID" class="btn btn-secondary btn-sm">Удалить</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>

